<!-- HEADER :: BEGIN -->
<header>
  <!-- HEADER :: BRAND -->
  <div class="header-brand">
    <a href="/" class="header-brand-wrapper">
      <img src="/assets/img/logo.png" alt="Bookify" class="header-brand-logo" />
    </a>
  </div>

  <!-- HEADER :: NAVIGATION -->
  <nav class="header-nav">
    <!-- HEADER :: SEARCH -->
    <div class="header-search-wrapper">
      <form onsubmit="javascript: function() {return false;}">
        <input type="search" placeholder="¿Qué estas buscando?" class="header-search" />
        <i class="fas fa-search header-search-icon"></i>
      </form>
    </div>

    <!-- HEADER :: MENU -->
    <div class="header-menu">
      <ul type="none" class="header-menu-items show">
        <li>
          <a href="javascript:alert('PROXIMAMENTE!');">Ofertas</a>
        </li>
        <li>
          <div class="dropdown">
            <button class="dropbtn">Ayuda</button>
            <div class="dropdown-content">
              <a href="/help/#cerP">Atencion al Cliente</a>
              <a href="/help/#segP">Formas de Pago</a>
              <a href="/help/#cuaP">Costos de Envio</a>
              <a href="/help/#sepP">Preguntas Frecuentes</a>
              <a href="/regretful">Arrepentimiento de Compra</a>
            </div>
          </div>
        </li>
        <li>
          <a href="/contact">Contacto</a>
        </li>
      </ul>
    </div>

    <!-- HEADER :: ACCOUNT -->
    <div class="header-account">
      <ul type="none" class="header-account-items show">
        <li>
          <a href="/admin/login"><i class="far fa-user"></i></a>
        </li>
        <li>
          <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
        </li>
        <li>
          <div class="checkbox">
            <input type="checkbox" id="dark-mode-toggler" style="display:none">
            <label for="dark-mode-toggler" class="dark-mode-toggler"><span></span></label>
          </div>
        </li>
        <% if (locals.session) { %>
        <li>
          <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i></a>
        </li>
        <% } %>
      </ul>
    </div>

    <!-- HEADER :: TRIGGER -->
    <div class="header-trigger">
      <div class="header-trigger-button">
        <i class="fas fa-bars"></i>
      </div>
    </div>
  </nav>
</header>
<!-- HEADER :: END -->
