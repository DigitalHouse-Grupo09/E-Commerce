    <div class="banners-list">
        <div class="banner fade show">
            <div class="banner-number">1 / 4</div>
            <figure>
                <a href="/">
                <img src="/assets/img/banners/banner-04.jpg" class="banner-image" style="width: 100%">
                </a>
            </figure>
        </div>

        <div class="banner fade show">
            <div class="banner-number">2 / 4</div>
            <figure>
                <img src="/assets/img/banners/banner-01.jpg" class="banner-image" style="width: 100%">
            </figure>
        </div>

        <div class="banner fade show">
            <div class="banner-number">3 / 4</div>
            <figure>
                <img src="/assets/img/banners/banner-02.jpg" class="banner-image" style="width: 100%">
            </figure>
        </div>

