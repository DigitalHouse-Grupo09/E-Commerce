    </div>

    <div class="banners-dots">
        <span class="banner-dot" onclick="app.banner.currentSlide(1)"></span>
        <span class="banner-dot" onclick="app.banner.currentSlide(2)"></span>
        <span class="banner-dot" onclick="app.banner.currentSlide(3)"></span>
