<html>
<head>
    <%- include('../../partials/metas') %>
    <%- include('../../partials/styles') %>
</head>
<body>
    <%- include('../../partials/header') %>

    <!-- MAIN :: BEGIN -->
    <main>
        <section class="form-wrapper">
            <form action="/admin/products/create" method="POST" class="form">
                <div class="form-group">
                    <input type="text" id="title" name="title" placeholder="Titulo" class="form-input" value="<%= (locals.old || {}).title || '' %>">
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Descripción" class="form-input" rows="5" cols="43"><%= (locals.old || {}).description || '' %></textarea>
                </div>
                <div class="form-group">
                    <input type="file" name="image" placeholder="Imagen" class="form-input" value="<%= (locals.old || {}).image || '' %>"> 
                </div>
                <div class="form-group">
                    <input type="number" name="price" placeholder="Precio" class="form-input" value="<%= (locals.old || {}).price || '' %>">
                </div>
                <div class="form-group">
                    <input type="number" name="discount" placeholder="Descuento" class="form-input" value="<%= (locals.old || {}).discount || '' %>">
                </div>
                <div class="form-group">
                    <input type="text" name="author" placeholder="Autor" class="form-input" value="<%= (locals.old || {}).author || '' %>">
                </div>
                <div class="form-group">
                    <label for="publishedAt" class="form-label">Fecha de publicación</label>
                    <input type="date" name="publishedAt" class="form-input" value="<%= (locals.old || {}).publishedAt || '' %>">
                </div>
                <div class="form-group">
                    <input type="number" name="pages" placeholder="Cantidad de paginas" class="form-input" value="<%= (locals.old || {}).pages || '' %>">
                </div>
                <div class="form-group">
                    <label for="language" class="form-label">Seleccionar idioma</label>
                    <select name="language">
                        <option value="spanish" <%= ((locals.old || {}).language || '') === 'spanish' ? 'selected' : '' %>>Español</option>
                        <option value="english" <%= ((locals.old || {}).language || '') === 'english' ? 'selected' : '' %>>Inglés</option>
                        <option value="french" <%= ((locals.old || {}).language || '') === 'french' ? 'selected' : '' %>>Francés</option>
                        <option value="portuguese" <%= ((locals.old || {}).language || '') === 'portuguese' ? 'selected' : '' %>>Portugues</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="format" placeholder="Tamaño" class="form-input" value="<%= (locals.old || {}).format || '' %>">
                </div>
                <div class="form-group">
                    <input type="text" name="presentation" placeholder="Presentación" class="form-input" value="<%= (locals.old || {}).presentation || '' %>">
                </div>
                <div class="form-actions">
                    <button type="submit" class="form-action-submit">Enviar</button>
                    <button type="reset" class="form-action-reset">Limpiar</button>
                </div>
            </form>
        </section>
    </main>
    <!-- MAIN :: END -->

    <%- include('../../partials/footer') %>
    <%- include('../../partials/scripts') %>
</body>
</html>
