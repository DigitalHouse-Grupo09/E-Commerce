<!-- PRODUCT :: ITEM :: BEGIN -->
<tr>
    <td class="text-center"><%= product.id %></td>
    <td>
        <div class="d-flex align-items-start justify-content-start">
            <img src="<%= product.image %>" width="40px" />
            <div class="ml-3"><%= product.title %></div>
        </div>
    </td>
    <td class="text-right">AR$ <%= product.price.toFixed(2) %></td>
    <td><%= product.author %></td>
    <td><%= product.language %></td>
    <td><%= product.publishedAt %></td>
    <td>
        <div class="d-flex align-items-center justify-content-center">
            <a href="/admin/products/update/<%= product.id %>" class="text-center" title="Editar">📝</a>
            <a href="#" onclick="destroyProduct(event, <%= product.id %>)" style="margin-left:15px;" class="text-center" title="Borrar">🗑</a>
            <form id="product-<%= product.id %>-delete-form" action="/admin/products/destroy/<%= product.id %>?_method=DELETE" method="POST" class="d-none"></form>
        </div>
    </td>
</tr>
<!-- PRODUCT :: ITEM :: END -->
