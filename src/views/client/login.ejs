<html>
<head>
    <%- include('../partials/metas') %>
    <%- include('../partials/styles') %>
</head>
<body>
    <%- include('../partials/header') %>

    <!-- MAIN :: BEGIN -->
    <main class="login">
        <section class="form-wrapper">
            <!-- FORM -->
            <form method="POST" action="/client/login" class="form">

                <!-- FORM :: ACCOUNT -->
                <div class="form-group form-group-column">
                    <input type="text" class="form-input" id="email" name="email" placeholder="Email" value="<%= locals.old && old.email %>"/>
                    <% if(locals.errors && errors.email) { %>

                        <p class="feedback"> <%= errors.email.msg %> </p>

                    <% } %>
                </div>
                <div class="form-group form-group-column">
                    <input type="password" class="form-input" id="password" name="password" placeholder="ContraseÃ±a" value="<%= locals.old && old.password %>"/>
                    <% if(locals.errors && errors.password) { %>

                        <p class="feedback"> <%= errors.password.msg %> </p>

                    <% } %>
                </div>

                <div class="separator separator-dashed"></div>

                <!-- FORM :: ACTIONS -->
                <div class="form-actions form-actions-center">
                    <button type="submit" class="form-action-submit">Entrar</button>
                </div>
            </form>   
        </section>
        <div class="client-register">
            <a href="/client/register">
                <small>Â¿No estas registrado? Registrate!</small>
            </a>
        </div>
    </main>
    <!-- MAIN :: END -->

    <%- include('../partials/footer') %>

    <%- include('../partials/scripts') %>
</body>
</html>
