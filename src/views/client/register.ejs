<html>
<head>
    <%- include('../partials/metas') %>
    <%- include('../partials/styles') %>
</head>
<body>
    <%- include('../partials/header') %>

    <!-- MAIN :: BEGIN -->
    <main class="login">
        <section class="form-wrapper">
            <!-- FORM -->
            <form method="POST" action="/client/register" class="form">

                <!-- FORM :: ACCOUNT -->
                <div class="form-group form-group-center">
                    <input type="text" class="form-input" id="name" name="name" placeholder="Nombre y apellido" />
                    <% if(locals.errors && errors.name) { %>

                        <p class="feedback"> <%= errors.name.msg %> </p>

                    <% } %>
                </div>
                <div class="form-group form-group-center">
                    <input type="text" class="form-input" id="email" name="email" placeholder="Email" />
                    <% if(locals.errors && errors.email) { %>

                        <p class="feedback"> <%= errors.email.msg %> </p>

                    <% } %>
                </div>
                <div class="form-group form-group-center">
                    <input type="password" class="form-input" id="password" name="password" placeholder="ContraseÃ±a" />
                    <% if(locals.errors && errors.password) { %>

                        <p class="feedback"> <%= errors.password.msg %> </p>

                    <% } %>
                </div>

                <div class="separator separator-dashed"></div>

                <!-- FORM :: ACTIONS -->
                <div class="form-actions form-actions-center">
                    <button type="submit" class="form-action-submit">Registrarme</button>
                </div>
            </form>   
        </section>
    </main>
    <!-- MAIN :: END -->

    <%- include('../partials/footer') %>

    <%- include('../partials/scripts') %>
</body>
</html>