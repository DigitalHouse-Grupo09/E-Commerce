<article class="category column-1 md:column-2 lg:column-4" data-id="<%= category.id %>">
    <a href="/categories/<%= category.slug %>">
        <div class="category-content">
            <figure>
                <i class="category-icon category-<%= category.slug %>" ></i>
            </figure>
            <div class="category-content-separator"></div>
            <h4 class="category-title"><%- category.description %></h4>
        </div>
    </a>
</article>
